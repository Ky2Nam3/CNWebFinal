
@{
    Layout = null;
}

<!DOCTYPE html>

@using CoffeeDatDat.Models
@model IEnumerable<KhachHang>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LoadKhachHang</title>
</head>
<body>
    <div class="content">

        <div class="module">
            <div class="module-head">
                <h3>Tables</h3>
            </div>
            <div class="module-body">
                <table class="table table-striped table-bordered table-condensed">
                    <thead>
                        <tr>
                            <th>Mã khách hàng</th>
                            <th>Họ Tên</th>
                            <th>SDT</th>
                            <th>Email</th>
                            <th>Tên Đăng Nhập</th>
                            <th>Mật Khẩu</th>
                            <th colspan="2">Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (KhachHang it in Model)
                        {
                        <tr>

                            <td>@it.MaKH</td>
                            <td>@it.HoTenKH</td>
                            <td>@it.SDT</td>
                            <td>@it.Email</td>
                            <td>@it.TenDangNhap</td>
                            <td>@it.MatKhau</td>
                            <td> <a href="/Home/LoadChiTietKhachHang/@it.MaKH">Xem</a>  </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="module-head">
                <h3></h3>
            </div>
        </div>



        <br />

    </div><!--/.content-->
</body>
</html>
